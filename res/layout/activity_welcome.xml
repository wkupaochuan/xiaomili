<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ai.ui.Welcome" >

    <ImageButton
        android:id="@+id/btn_story_tab"
        android:layout_width="147dp"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:onClick="storyTabOnClick"
        android:src="@drawable/microphone"
        />

    <ImageButton
        android:id="@+id/btn_knowledge_tab"
        android:layout_width="147dp"
        android:layout_height="220dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_story_tab"
        android:src="@drawable/tab_story_home"
        android:onClick="downloadStorys"
        android:layout_marginRight="0dp" />

    <ImageButton
        android:id="@+id/btn_im_tab"
        android:layout_width="147dp"
        android:layout_height="220dp"
        android:layout_alignLeft="@+id/btn_story_tab"
        android:layout_below="@+id/btn_story_tab"
        android:src="@android:drawable/alert_dark_frame" />

    <ImageButton
        android:id="@+id/btn_showdown_tab"
        android:layout_width="147dp"
        android:layout_height="220dp"
        android:layout_alignLeft="@+id/btn_knowledge_tab"
        android:layout_alignTop="@+id/btn_im_tab"
        android:src="@android:drawable/alert_dark_frame" />

</RelativeLayout>